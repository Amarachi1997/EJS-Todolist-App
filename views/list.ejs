<%- include('header') -%>

    <div class="box" id="heading">
        <h1> <%= kindOfList %> List </h1>
    </div>

    <div class="box">
       
            <% for(let i = 0; i < newListItem.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                   <p>  <%= newListItem[i] %> </p>
                </div>
            <% } %>
        
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="enter new item">
                <button type="submit" name="button" value="<%= kindOfList %>">+</button>
            </form>
    </div>
<%- include('footer') -%>
 